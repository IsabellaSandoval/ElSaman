                                <a href="/contacto">CONTACTO</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <section class="flex-cont-index contenidoVA">

        <section class="flex-item izq">

            <article>
                <!-- Ver tipo -->

                <article>
                    <div class="flex-cont-index">
                        <div class="flex-item">
                            <p>Ver Filtros</p>
                        </div>

                        <div class="flex-item">
                            <button class="verFiltros">
                                <i class="fas fa-caret-up"></i>
                            </button>
                        </div>
                    </div>

                </article>

                <!-- Filtro por tipos -->
                <article>
                    <div class="flex-cont-index">
                        <div class="flex-item">
                            <p>Tipo</p>
                        </div>

                        <div class="flex-item">
                            <button class="verFiltros">
                                <i class="fas fa-caret-up"></i>
                            </button>
                        </div>
                    </div>

                    <div class="tipo">
                        <label class="container">Todos
                            <input type="radio" name="radio">
                            <span class="checkmark"></span>
                        </label>
                        <label class="container">Embrión
                            <input type="radio" name="radio">
                            <span class="checkmark"></span>
                        </label>
                        <label class="container">Ternera
                            <input type="radio" name="radio" checked="checked">
                            <span class="checkmark"></span>
                        </label>
                        <label class="container">Novilla
                            <input type="radio" name="radio">
                            <span class="checkmark"></span>
                        </label>
                        <label class="container">Vaca
                            <input type="radio" name="radio">
                            <span class="checkmark"></span>
                        </label>

                    </div>

                </article>

                <!-- Filtro por edad -->
                <article class="flex-cont-index ver">
                    <div class="flex-item">
                        <p>Edad</p>
                    </div>

                    <div class="flex-item">
                        <button class="verFiltros">
                            <i class="fas fa-caret-up"></i>
                        </button>
                    </div>

                </article>

                <!--....................FILTRO edad.............. -->
                <article class="rango">
                    <div class=" flex-container slidecontainer">
                        <input type="range" min="0" max="7" value="0" class="slider" id="desde_edad">
                        <input type="range" min="7" max="15" value="15" class="slider" id="hasta_edad">
                    </div>
                    <div class="flex-container">
                        <p>Desde:
                            <span id="desdeValor_edad"></span>
                        </p>
                        <p>Hasta:
                            <span id="hastaValor_edad"></span>
                        </p>
                    </div>

                    <div class="flex-container">
                        <button class="filtroRango_edad">Buscar</button>
                        <button class="borrarFiltros_edad">Borrar FIltros</button>
                    </div>

                </article>

                <article class="flex-cont-index ver">
                    <div class="flex-item">
                        <p>Precio</p>
                    </div>

                    <div class="flex-item">
                        <button class="verFiltros">
                            <i class="fas fa-caret-up"></i>
                        </button>
                    </div>
                </article>

                <!--....................FILTRO PRECIO.............. -->
                <article class="rango">
                    <div class=" flex-container slidecontainer">
                        <input type="range" min="0" max="500000" value="0" class="slider" id="desde">
                        <input type="range" min="500000" max="1000000" value="1000000" class="slider" id="hasta">
                    </div>
                    <div class="flex-container">
                        <p>Desde:
                            <span id="desdeValor"></span>
                        </p>
                        <p>Hasta:
                            <span id="hastaValor"></span>
                        </p>
                    </div>

                    <div class="flex-container">
                        <button class="filtroRango">Buscar</button>
                        <button class="borrarFiltros">Borrar FIltros</button>
                    </div>

                </article>



            </article>
        </section>

        <section class="flex-item der">
            <section class="flex-container">
                <div class="flex-item">
                    <p>GENÉTICA / Teneras</p>
                </div>

                <div class="flex-item">

                    <div class="flex-cont-index">
                        <p>Ordenar:</p>
                        <select>
                            <option value="asc">Precio Ascendente</option>
                            <option value="des">Precio Descendente</option>
                        </select>
                    </div>

                </div>

                <div class="flex-item">
                    <div class="flex-cont-index">
                        <p>Ver</p>
                        <div>
                            <!--....................FILTRO SEXO.............. -->

                            <a href="/genetica/terneras?sexo=Hembra">
                                <i class="fas fa-mars"></i>
                            </a>
                            <a href="/genetica/terneras?sexo=Macho">
                                <i class="fas fa-venus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="productos">

                {{#each Terneras}}
                <article data-id="{{this._id}}">
                    <a href="/genetica/terneras/{{_id}}">

                        <div class="img-info">
                            <img src="{{imagen}}">
                        </div>
                        <h1>{{marca}} {{modelo}}</h1>
                        <div class="flex-container info">
                            <h1>{{nombre}} {{numero}}</h1>
                        </div>
                    </a>
                    <div>
                        <button class="agregar"> Planear Visita</button>
                    </div>
                </article>
                {{/each}}
            </section>


        </section>



    </section>
    </section>


     <footer class="containe-fluid">
    <section>
        <div class="sombra">
            <h3>SÍGUENOS EN NUESTRAS REDES SOCIALES</h3>

